@model PricingVM
@{
    ViewData["Title"] = "Pricing";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>Pricing</h1>
                    <p class="mb-0">Odio et unde deleniti. Deserunt numquam exercitationem. Officiis quo odio sint voluptas consequatur ut a odio voluptatem. Sit dolorum debitis veritatis natus dolores. Quasi ratione sint. Sit quaerat ipsum dolorem.</p>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="index.html">Home</a></li>
                <li class="current">Pricing</li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->
<!-- Pricing Section -->
<section id="pricing" class="pricing section">

    <div class="container">

        <div class="row gy-3">

           @foreach (var pricing in Model.Pricings)
            {
                <div class="col-xl-3 col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="pricing-item @(pricing.IsFeatured?"featured":"") ">
                        @if (pricing.IsAdvanced)
                        {
                            <span class="advanced">Advanced</span>
                        }
                        <h3>@pricing.Name</h3>
                        <h4><sup>$</sup>@pricing.Price<span> / month</span></h4>
                        <ul>
                           @foreach (var service in Model.Services)
                            {

                                <li class="@(pricing.PricingServices.Any(pc=>pc.ServiceId==service.Id)?"":"na")">@service.Name</li>
                              
                            }
                            @* <li class="na">Massa ultricies mi</li> *@
                        </ul>
                        <div class="btn-wrap">
                            <a href="#" class="btn-buy">Buy Now</a>
                        </div>
                    </div>
                </div>

                <!-- End Pricing Item -->
            }

          

        </div>

    </div>

</section><!-- /Pricing Section -->